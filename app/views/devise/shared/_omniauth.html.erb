<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to(omniauth_authorize_path(resource_name, provider), class: "btn btn-block btn-lg btn-#{provider}", method: :post) do %>
      <%
        fa_icon = case provider
        when :facebook
          "fa fa-#{provider}-official"
        when :linkedin
          "fa fa-#{provider}-square"
        when :square
          "fb fb-square"
        else
          "fa fa-#{provider}"
        end
      %>
      <i class="<%= fa_icon %>"></i> <%= OmniAuth::Utils.camelize(provider) %>
    <% end %>
  <% end %>
<% end %>
