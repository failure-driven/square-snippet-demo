<div class="card mb-3" data-testid="stories-panel">
  <h5 class="card-header">
    <div class="d-flex justify-content-between">
      <div class="col-auto">
        <h4>New Story</h4>
      </div>
    </div>
  </h5>

  <div class="card-body">
    <%= form_with model: @story, url: site_stories_url(@site.reference_id), data: { testid: "story-form" } do |form| %>
      <div class="form-group">
        <%= form.label :story_title %>
        <%= form.text_field :story_title, class: "form-control", type: "text" %>
      </div>

      <div class="d-flex justify-content-end mt-3">
        <%= form.submit "Submit", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
