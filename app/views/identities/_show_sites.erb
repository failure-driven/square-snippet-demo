<ul class="list-group">
  <% @sites.map do |site_id, site| %>
    <%= link_to identity_site_path(@identity.uid, site_id), class: "list-group-item list-group-item-action" do %>
      <div class="row">
        <div class="col-lg-3">
          <%= site_id %>
        </div>
        <div class="col-lg-3">
          <%= site[:site][:site_title] %>
        </div>
        <div class="col-lg-6">
          <%= site[:site][:domain] %>
        </div>
      </div>
    <% end %>
  <% end %>
</ul>
