<div class="container mt-3">
  <%= render partial: "identities/breadcrumbs" %>
  <div class="row card">
    <div class="card-body">
      <div class="card-title">
        <strong><%= @site.site_title %></strong>
      </div>
      <div>
        <%= @site.last_published %>
      </div>
      <div>
        <%= link_to "http://#{@site.domain}", target: "_blank" do %>
          <i class="fa fa-external-link-alt"></i>
          <%= "http://#{@site.domain}" %>
        <% end %>
      </div>
      <div class="row">
        <div
          data-controller="content-loader"
          data-content-loader-url-value="<%= show_site_identity_site_path(@identity.uid) %>"
        >
          <div class="text-center mt-3">
            <div class="spinner-border" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>