<div class="card mb-3" data-testid="stories-panel">
  <h5 class="card-header">
    <div class="d-flex justify-content-between">
      <div class="col-auto">
        <h4>My Stories</h4>
      </div>
      <div class="col-auto">
        <%= link_to 'New Story', new_user_story_path(user_id: current_user.id), class: "btn btn-primary" %>
      </div>
    </div>
  </h5>
  <div class="list-group list-group-flush" data-testid="stories-list">
    <% @stories.each do |story| %>
      <li class="list-group-item d-flex justify-content-between align-items-center">
        <div><%= story.site.site_title %></div>
        <div><%= story.story_title %></div>
        <div><%= story.content_count_message %></div>
        <div><%= link_to 'Edit', edit_user_story_path(current_user, story), class: "btn btn-secondary" %></div>
      </li>
    <% end %>
  </div>
</div>
