<div class="card" style="width: 100%;"  data-testid="stories-panel">
  <div class="card-header">
    <h4>My Stories</h4>

    <%= link_to 'New Story', new_user_story_path(user_id: current_user.id), class: "btn btn-primary" %>
  </div>
  <ul class="list-group list-group-flush" data-testid="stories-list">
    <% @stories.each do |story| %>
      <li class="list-group-item">
        <div><%= story.site.site_title %></div>
        <div><%= story.story_title %></div>
        <div><%= story.draft %></div>
        <%= link_to 'Edit', edit_user_story_path(current_user, story), class: "btn btn-primary" %>
      </li>
    <% end %>
  </ul>
</div>
